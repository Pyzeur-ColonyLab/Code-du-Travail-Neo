# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
API_WORKERS=1

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Model Configuration
MODEL_CONFIG_PATH=config/models.json
DEFAULT_MODEL=code-du-travail-mistral

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=*

# CORS
ENABLE_CORS=true
ALLOWED_ORIGINS=["*"]

# Swagger UI
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true 

# Hugging Face Token for model downloads
HUGGINGFACE_TOKEN=your-huggingface-token-here 