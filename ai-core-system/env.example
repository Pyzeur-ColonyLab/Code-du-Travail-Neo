# =============================================================================
# AI CORE SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=5

# Model Configuration
MODEL_CONFIG_PATH=/app/models.json
MODEL_CACHE_DIR=/app/cache
DEFAULT_MODEL=mistral-7b-instruct
MODEL_LOAD_TIMEOUT=300
MODEL_UNLOAD_TIMEOUT=60

# Security Configuration
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
MAX_PROMPT_LENGTH=4096
MAX_TOKENS_PER_REQUEST=2048
ALLOWED_ORIGINS=["*"]
ENABLE_CORS=true

# Authentication
API_KEYS=["your-api-key-1","your-api-key-2"]
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_ENABLED=true

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/ai-api.cryptomaltese.com.crt
SSL_KEY_PATH=/etc/ssl/private/ai-api.cryptomaltese.com.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Cloudflare Configuration
CLOUDFLARE_ENABLED=false
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_DOMAIN=ai-api.cryptomaltese.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Performance Configuration
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300
KEEP_ALIVE_TIMEOUT=5

# Model Memory Management
MAX_MODEL_MEMORY_GB=16
MODEL_QUANTIZATION=4bit
ENABLE_MODEL_CACHING=true
MODEL_CACHE_TTL=3600

# Logging Configuration
LOG_FILE_PATH=/app/logs/ai-api.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Development Configuration
RELOAD_ON_CHANGE=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_core
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
ADMIN_EMAIL=admin@cryptomaltese.com

# External API Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
